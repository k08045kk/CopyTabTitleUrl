{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "2.1.0",
  "default_locale": "en",
  
  "author": "toshi",
  "homepage_url": "https://www.bugbugnow.net/",
  
  "background": {
    "scripts": [
      "/lib/punycode.js/punycode.js",
      "/js/common.js",
      "/js/background.js"
    ]
  },
  
  "options_ui": {
    "page": "/html/options.html"
  },
  
  "browser_action": {
    "default_title": "__MSG_extensionName__",
    "default_icon": {
      "19": "icon/19.png",
      "38": "icon/38.png"
    }
  },
  
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  
  "commands": {
    "shortcut_action": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "format1"
    },
    "shortcut_action2": {
      "description": "format2"
    }
  },
  
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "storage",
    "tabs"
  ]
}